generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Guild {
  id        String    @id
  keywords  Keyword[]
}

model Keyword {
  id        Int      @id @default(autoincrement())
  guildId   String
  trigger   String
  responses Json
  guild     Guild    @relation(fields: [guildId], references: [id])

  @@unique([guildId, trigger])
}